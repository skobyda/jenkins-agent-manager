<?xml version="1.0" encoding="UTF-8"?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form">
<f:block>
    <f:repeatable var="script" name="scripts" items="${instance.scripts}">
        <f:entry title="Trigger actions" field="trigger">
            <select  name="trigger" value="${script.trigger}">
                <f:option selected="${script.trigger=='BEFORE'}" value="BEFORE">Before build</f:option>
                <f:option selected="${script.trigger=='SUCCESS'}" value="SUCCESS">Successful build</f:option>
                <f:option selected="${script.trigger=='FAIL'}" value="FAIL">Failed build</f:option>
            </select>
        </f:entry>
        <f:entry title="Choose Language" field="language">
            <select  name="language" value="${script.language}">
                <f:option selected="${script.language=='BASH'}" value="BASH">Bash</f:option>
                <f:option selected="${script.language=='GROOVY'}" value="GROOVY">Groovy</f:option>
            </select>
        </f:entry>
        <f:entry field="script" title="Script" >
            <f:textarea value="${script.script}" />
        </f:entry>
        <f:entry title="">
            <div align="right">
                <f:repeatableDeleteButton />
            </div>
        </f:entry>
    </f:repeatable>
</f:block>
</j:jelly>
